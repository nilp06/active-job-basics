<h1 class="text-center">Events</h1>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <th>
        Name
      </th>
      <th>
        Time
      </th>
      <th>Enroll
      </th>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.event_date %></td>
          <td><%= link_to "Enroll" , enroll_event_path(event), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
